SELECT ri.REST_ID, REST_NAME, FOOD_TYPE, FAVORITES, ADDRESS, ROUND(AVG(REVIEW_SCORE), 2) AS SCORE
FROM REST_INFO ri
JOIN REST_REVIEW rr -- 코슌스, 애플우스의 리뷰가 없으므로 OUTER JOIN인 LEFT JOIN이 아닌 INNER JOIN으로 처리해야 함
ON ri.REST_ID = rr.REST_ID
WHERE ADDRESS LIKE '서울%' -- %서울%은 주소 중간에 서울이 들어간 주소도 포함하기 때문에 %서울 로 해야함
GROUP BY REST_ID
ORDER BY SCORE DESC, FAVORITES DESC;